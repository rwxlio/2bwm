# programs
alias e="nvim"
alias ls="ls --color=auto --group-directories-first"
alias ll="ls -lAh"
alias df="df -h"
alias sxiv="sxiv -b"
alias getodo="todo"
alias dict="cambridge-cli"
alias dl-vid="yt-dlp --embed-chapters --format=\"bestvideo[height<=1080]+bestaudio\" \"$1\""
alias picom-pijulius="$HOME/.local/src/picom-pijulius/build/src/picom -b --animations --animation-window-mass 0.5 --animation-for-open-window zoom --animation-stiffness 350"
alias picom-jonaburg-fix="$HOME/.local/src/picom-jonaburg-fix/build/src/picom"
alias hotspot="sudo setsid -f $HOME/.local/bin/initSoftAP wlan0 eth0"

